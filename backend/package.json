{
  "name": "smarttrust-backend",
  "version": "0.1.0",
  "description": "SmartTrust backend API",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "migrate": "tsx src/db/migrate.ts",
    "setup": "tsx scripts/setup.js",
    "setup:db": "bash scripts/setup-db.sh",
    "setup:db:win": "powershell -ExecutionPolicy Bypass -File scripts/setup-db.ps1",
    "fix-db": "powershell -ExecutionPolicy Bypass -File scripts/fix-database.ps1",
    "grant-permissions": "powershell -ExecutionPolicy Bypass -File scripts/grant-permissions.ps1",
    "setup-db-complete": "powershell -ExecutionPolicy Bypass -File scripts/complete-setup.ps1",
    "check-env": "tsx scripts/check-env.js",
    "set-premium": "tsx scripts/set-premium.js",
    "cleanup-marked-links": "tsx scripts/cleanup-marked-links.js",
    "docker:up": "cd .. && docker-compose up -d",
    "docker:down": "cd .. && docker-compose down",
    "docker:logs": "cd .. && docker-compose logs -f"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.3",
    "openai": "^4.20.1",
    "pg": "^8.11.3",
    "redis": "^4.6.11",
    "stripe": "^14.7.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
